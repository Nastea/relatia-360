generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id
  email     String?  @unique
  anon      Boolean  @default(true)
  createdAt DateTime @default(now())

  sessions            Session[]
  messages            Message[]
  events              Event[]
  reports             Report[]
  exerciseSubmissions ExerciseSubmission[]
}

model Session {
  id                  String   @id
  userId              String
  lessonId            Int?
  startedAt           DateTime @default(now())
  flowState           String?
  videoWatched        Boolean  @default(false)
  videoReflectionDone Boolean  @default(false) // <- adaugÄƒ linia asta
  exerciseStep        Int      @default(0)
  clarifyTurns        Int      @default(0)
  exerciseStarted     Boolean  @default(false)
  exerciseCompleted   Boolean  @default(false)

  user      User      @relation(fields: [userId], references: [id], onDelete: Cascade)
  lesson    Lesson?   @relation("LessonSessions", fields: [lessonId], references: [id])
  messages  Message[]
  events    Event[]
  exerciseSubmissions ExerciseSubmission[] @relation("SessionExerciseSubmissions")
}


model Message {
  id               String   @id
  userId           String
  sessionId        String
  role             String
  content          String
  createdAt        DateTime @default(now())

  flagged          Boolean  @default(false)
  moderation       Json?
  sources          Json?

  promptTokens     Int?
  completionTokens Int?
  totalTokens      Int?

  user     User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  session  Session @relation(fields: [sessionId], references: [id], onDelete: Cascade)
}

model Event {
  id        String   @id
  userId    String?
  sessionId String?
  type      String
  data      Json?
  createdAt DateTime @default(now())

  user    User?    @relation(fields: [userId], references: [id], onDelete: SetNull)
  session Session? @relation(fields: [sessionId], references: [id], onDelete: SetNull)
}

model Lesson {
  id           Int       @id @default(autoincrement())
  title        String
  objectives   Json      // array de stringuri
  videoUrl     String?
  materialText String?
  instructions String?
  exercises    Json      // array de obiecte (title, prompt, rubric)
  coachScript  String?
  createdAt    DateTime  @default(now())

  assets   LessonAsset[]
  sessions Session[]     @relation("LessonSessions")
}

model LessonAsset {
  id        String   @id
  lessonId  Int
  kind      String
  filename  String
  size      Int
  mime      String
  path      String

  lesson    Lesson   @relation(fields: [lessonId], references: [id], onDelete: Cascade)
  createdAt DateTime @default(now())
}

model Report {
  id        String   @id
  userId    String
  data      Json
  updatedAt DateTime @updatedAt
  createdAt DateTime @default(now())

  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model ExerciseSubmission {
  id        String   @id
  userId    String
  sessionId String
  lessonId  Int
  answers   Json
  createdAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  session Session @relation("SessionExerciseSubmissions", fields: [sessionId], references: [id], onDelete: Cascade)
}
